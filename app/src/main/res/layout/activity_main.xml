<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.maricia.myexamplesapp.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="Customer:"
        app:layout_constraintBaseline_toBaselineOf="@+id/customerIdEditText"
        app:layout_constraintEnd_toStartOf="@+id/customerIdEditText" />

    <EditText
        android:id="@+id/customerIdEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Customer ID"
        android:inputType="number"
        android:singleLine="true"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/customerInfoTextView"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/customerInfoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:text="Info"
        app:layout_constraintBaseline_toBaselineOf="@+id/customerIdEditText"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/pullBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp"
        android:text="Pull"
        android:onClick="onClick"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/customerIdEditText" />

    <TextView
        android:id="@+id/customerFirstNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="171dp"
        android:text="First Name:"
        app:layout_constraintEnd_toStartOf="@+id/customerFirstNameEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:editable="false"/>

    <EditText
        android:id="@+id/customerFirstNameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="13dp"
        android:ems="10"
        android:inputType="none|textPersonName"
        android:singleLine="true"
        android:textAlignment="center"
        app:layout_constraintBaseline_toBaselineOf="@+id/customerFirstNameTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/customerFirstNameTextView" />

    <TextView
        android:id="@+id/customerLastNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="16dp"
        android:text="Last Name:"
        app:layout_constraintEnd_toStartOf="@+id/customerLastNameEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/customerLastNameEditText" />

    <EditText
        android:id="@+id/customerLastNameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="13dp"
        android:ems="10"
        android:inputType="none|textPersonName"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/customerLastNameTextView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.455" />

    <TextView
        android:id="@+id/customerStreetTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="17dp"
        android:text="Street:"
        app:layout_constraintBaseline_toBaselineOf="@+id/customerStreetEditText"
        app:layout_constraintEnd_toStartOf="@+id/customerStreetEditText"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/customerStreetEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:inputType="none|textPersonName"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/customerStreetTextView"
        app:layout_constraintTop_toBottomOf="@+id/customerLastNameEditText" />

    <TextView
        android:id="@+id/customerCityTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="22dp"
        android:layout_marginTop="40dp"
        android:text="City:"
        app:layout_constraintEnd_toStartOf="@+id/customerCityEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/customerStreetTextView" />

    <EditText
        android:id="@+id/customerCityEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:inputType="none|textPersonName"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/customerCityTextView"
        app:layout_constraintTop_toBottomOf="@+id/customerStreetEditText" />
</android.support.constraint.ConstraintLayout>
